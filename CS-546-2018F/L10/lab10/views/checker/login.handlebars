<form id="login-form" method="post" action="/login">

    <div class="form-group">
        <label for="textA">Enter your username</label>
        <input id="textA" name="username" placeholder="Your username" class="form-text-area" />
    </div>

    <div class="form-group">
        <label for="textB">Enter your password</label>
        <input id="textB" name="password" placeholder="Your password" class="form-text-area" />
    </div>

    <div class="form-group">
        {{#if hasErrors}}
        <ul class="error-list">
            {{#each errors}}
            <li>
                {{this}}
            </li>
            {{/each}}
        </ul>
        {{/if}}
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-default">Log in</button>
    </div>
</form>